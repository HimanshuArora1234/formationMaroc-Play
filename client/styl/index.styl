@require './constants'

body
  background-color background
  color inputDarkGray
  font-family 'Open Sans', sans-serif
  margin 0
  padding 0
  border 0
  vertical-align baseline
  *
    box-sizing border-box

.label
  display: block;
  color: #759e00;
  font-size: 16px;
  font-weight: 600;
  line-height: 18px;
  text-transform: uppercase;
  margin-bottom: 10px;

#pageContainer
  display flex
  flex-direction column
  min-width 800px
  position relative

#topHeader
  background-color white
  box-shadow 1px 3px 5px 0px borderLightGray
  display flex
  flex 0 1 auto
  justify-content center
  > div
    display flex
    flex 0 1 auto
    flex-wrap wrap
    justify-content space-between
    margin 0 2%
    width 1200px

.logo-ca
  flex none
  height 63px
  margin 6px 0
  width 100px

.userContainer
  align-items center
  display flex
  flex none
  height 50px
  margin 15px 0
  .userId
    line-height 18px
    margin-right 15px
    text-align right
    .userName
      color textGreen
      font-size 20px
      font-weight 300
    .userRole
      color textGray
      font-size 14px
      text-transform uppercase
  .avatar
    height 50px
    width 50px

#mainContainer
  width 1200px
  margin 0 auto
  margin-top 30px

.mini-box
  background #fff
  cursor pointer
  .box-title
    font-size 20px
    border-bottom 1px solid borderLightGray
    padding-top 19px
    padding-bottom 19px
    padding-left 19px
    min-height 95px
  .info
    font-size 16px
    border-bottom 1px solid borderLightGray
    padding-top 19px
    padding-bottom 19px
    padding-left 19px
    .number
      font-size 24px
      color textGreen
    .label
      font-size 12px
      margin-bottom 0
    p
     margin-top 5px
  .buttons
    display flex
    cursor default
    div
      width 40%
      padding 15px 8px 15px 8px
      border-right 1px solid borderLightGray
    span
      width 20%
      padding 15px
      border-right 1px solid borderLightGray
      color textPink
      text-align center
      &.disabled
        color textGray
      &:nth-child(4n)
        border-right none


.grid-wrapper
  display flex
  flex-flow row wrap
  > .grid-item
    width 23.1%
    margin-right 30px
    margin-top 30px
    box-shadow 1px 3px 5px 0px rgba(0, 0, 0, 0.1)
    &:nth-child(4n)
      margin-right 0

.on-off
  display flex
  justify-content space-between
  input[type='checkbox']
    appearance none
    position relative
    margin 0
    border none
    height 20px
    width 38px
    border-radius 20px
    background-color bgLightGray3
    outline none
  input[type='checkbox']:after
    content ''
    display inline-block
    position absolute
    top 1px;
    left 20px;
    width 18px;
    height 18px;
    border-radius 50%
    background textPink
    transition left 200ms
  input[type='checkbox']:checked:after
    left 1px
    background-color textGreen

.mini-box
  .buttons
    .on-off
      span
        padding 0
        border none
      .active
        color textGreen
      .inactive
        color textGray
    .off
      &.active
        color textGray
      &.inactive
        color textPink

.pointer
  cursor pointer
